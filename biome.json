{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "extends": ["@prezly/biome-config"],
    "files": {
        "includes": ["app/**", "src/**"]
    },
    "linter": {
        "rules": {
            "suspicious": {
                "noShadowRestrictedNames": "off"
            },
            "complexity": {
                "useLiteralKeys": "off"
            },
            "a11y": {
                "useHtmlLang": "off",
                "useKeyWithClickEvents": "off",
                "useSemanticElements": "off",
                "useButtonType": "off"
            }
        }
    }
}
