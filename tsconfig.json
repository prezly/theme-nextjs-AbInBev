{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/adapters/client": ["./src/adapters/client"],
      "@/adapters/server": ["./src/adapters/server"],
      "@/components/*": ["./src/components/*"],
      "@/hooks": ["./src/hooks/"],
      "@/icons": ["./src/icons/"],
      "@/modules/*": ["./src/modules/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"],
      "@/theme-settings": ["./src/theme-settings.ts"],
      "@/types": ["./src/types.ts"],
      "@/utils": ["./src/utils/"],
      "@prezly/theme-kit-nextjs/*": ["node_modules/@prezly/theme-kit-nextjs/build/*"]
    },
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "custom-next-env.d.ts",
    "@types/*",
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.mjs",
    "*.config.js",
    "playwright.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "_pages",
    "node_modules",
    "next-env.d.ts"
  ]
}
